<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="browse_tools_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/selector_browse_icons</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:shadowColor">@color/text_bold_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">23</item>
        <item name="android:textColor">@color/text_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="dialog_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:shadowColor">@color/text1_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="dialog_layout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>


</resources>